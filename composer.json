{
	"name": "mediawiki/syntax-highlight",
	"description": "Syntax highlighting extension for MediaWiki",
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "0.9.2",
		"mediawiki/mediawiki-codesniffer": "16.0.1",
		"jakub-onderka/php-console-highlighter": "0.3.2",
		"mediawiki/minus-x": "0.3.1",
		"mediawiki/mediawiki-phan-config": "0.1.0"
	},
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Brion Vibber",
			"email": "brion@wikimedia.org"
		},
		{
			"name": "Niklas Laxstr√∂m",
			"email": "nlaxstrom@wikimedia.org"
		},
		{
			"name": "Ori Livneh",
			"email": "ori@wikimedia.org"
		},
		{
			"name": "Rob Church"
		},
		{
			"name": "Tim Starling",
			"email": "tstarling@wikimedia.org"
		}
	],
	"scripts": {
		"fix": [
			"phpcbf",
			"minus-x fix ."
		],
		"test": [
			"parallel-lint . --exclude vendor --exclude node_modules",
			"phpcs -p -s",
			"minus-x check ."
		]
	},
	"extra": {
		"phan-taint-check-plugin": "1.1.0"
	}
}
